<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GraphicInterface.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GraphicInterface.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="GraphicInterface">

	<Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<!--<TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
	
	<StackPanel>		
	<!--this is the divition of the first grid that makes the interface-->
				
		<Grid RowDefinitions="Auto, *">

			<!--this is the first bar in the high of the screen-->
			<Grid Grid.Row="0" Background="Orange" Height="30" ColumnDefinitions="Auto, Auto, *">
				<Rectangle Grid.Column="0" Fill="AntiqueWhite" Width="100">
				
				</Rectangle>
			
				<Rectangle Grid.Column="1" Fill="Aquamarine" Width="100">

				</Rectangle>
				
				<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2">
					<TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				</StackPanel>
			
			</Grid>

			<!--this is the part of the main screen where you can select the differnts methods to use-->
			<Grid Grid.Row="1" ColumnDefinitions="Auto, *">
				<Rectangle Grid.Column="0" Fill="Bisque" Width="200" Height="420">
				
				</Rectangle>
				<Rectangle Grid.Column="1" Fill="Cyan">

				</Rectangle>
			</Grid>
		</Grid>
	</StackPanel>
</Window>
